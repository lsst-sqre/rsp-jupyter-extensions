import {
  JupyterFrontEnd,
  JupyterFrontEndPlugin
} from '@jupyterlab/application';

import { requestAPI } from './handler';

/**
 * Initialization data for the rsp-jupyter-extensions extension.
 */
const plugin: JupyterFrontEndPlugin<void> = {
  id: 'rsp-jupyter-extensions:plugin',
  description: 'Jupyter Extensions for the Rubin Science Platform',
  autoStart: true,
  activate: (app: JupyterFrontEnd) => {
    console.log('JupyterLab extension rsp-jupyter-extensions is activated!');

    requestAPI<any>('get-example')
      .then(data => {
        console.log(data);
      })
      .catch(reason => {
        console.error(
          `The rsp_jupyter_extensions server extension appears to be missing.\n${reason}`
        );
      });
  }
};

export default plugin;
